      <trans-unit id="7142317539794782327" datatype="html">
        <source>How to Play Risk - Rules and Strategies</source>
        <context-group purpose="location">
          <context context-type="sourcefile">src/app/risk_app/pages/home-page/home-page.component.html</context>
          <context context-type="linenumber">8,9</context>
